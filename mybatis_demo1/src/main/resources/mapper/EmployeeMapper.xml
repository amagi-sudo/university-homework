<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="mapper.EmployeeMapper">
    <!--加载员工数据-->
    <select id="findAll" resultType="org.example.pojo.Employee">
        SELECT *
        FROM employee
    </select>

    <!--    查找员工信息-->
    <select id="findByIds" parameterType="java.util.List" resultType="Employee">
        SELECT * FROM employee WHERE id IN
        <foreach item="id" collection="list" open="(" separator="," close=")">
            #{id}
        </foreach>
    </select>

    <!-- 添加员工信息-->
    <insert id="addEmployee" parameterType="org.example.pojo.Employee" keyProperty="id" useGeneratedKeys="true">
        INSERT INTO employee (id, name, age, position)
        VALUES (#{id}, #{name}, #{age}, #{position})
    </insert>

    <!-- 修改员工信息-->
    <update id="updateEmployee" parameterType="org.example.pojo.Employee">
        update employee
        set name=#{name},
            age=#{age},
            position=#{position}
        where id = #{id}
    </update>


    <!-- 删除员工信息-->
    <delete id="deleteByIds">
        DELETE FROM employee
        WHERE id IN
        <foreach item="id" collection="list" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper>